{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,  // Disable all strict type checking options
        "noImplicitAny": false,  // Allow variables to have 'any' type implicitly
        "noImplicitThis": false,  // Allow 'this' to have 'any' type implicitly
        "alwaysStrict": false,  // Disable strict mode for JavaScript files
        "strictNullChecks": false,  // Disable strict null checks
        "strictFunctionTypes": false,  // Disable strict checking of function types
        "strictPropertyInitialization": false,  // Disable strict checking of property initialization in classes
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
    "exclude": ["node_modules"]
}
